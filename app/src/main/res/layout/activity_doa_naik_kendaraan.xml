<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_naik_kendaraan"
    tools:context=".DoaNaikKendaraan">

    <!--region Tombol-tombol-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_pause_kendaraan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="110dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/button_pause"/>

        <ImageButton
            android:id="@+id/btn_play_kendaraan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="110dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/button_play"/>

        <ImageButton
            android:id="@+id/btn_stop_kendaraan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="110dp"
            android:src="@drawable/button_stop"/>
    </LinearLayout>
    <!--endregion-->


    <!--region Garis play-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_pass_kendaraan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_due_kendaraan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pass"
            android:layout_marginTop="75dp"
            android:layout_marginRight="200dp"
            android:layout_marginLeft="200dp"
            android:saveEnabled="false" />
    </LinearLayout>
    <!--endregion-->

    <!--region Tombol Back-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_back_kendaraan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/button_back"/>
    </LinearLayout>
    <!--endregion-->

</RelativeLayout>